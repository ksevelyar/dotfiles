# Rails
alias rs='bin/rails server'
alias rsd='bin/rails server --debugger'
alias rc='bin/rails console'
alias db='bin/rails dbconsole'
alias rr="bin/rails runner"
alias rspec='bundle exec rspec'
alias rake='bundle exec rake'


