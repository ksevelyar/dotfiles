[global/wm]
margin-top = 0
margin-bottom = 0

[settings]
screenchange-reload = true

[module/title]
type = internal/xwindow

[module/workspaces-xmonad]
; format-prefix = "%{F#df}ÔÄâ %{F-} "
type = custom/script
exec = tail -F /tmp/.xmonad-workspace-log
exec-if = [ -p /tmp/.xmonad-workspace-log ]
tail = true

[module/weather]
type = custom/script
exec = curl -s 'wttr.in/Moscow?format=1'
interval = 300


[module/gpmdp]
type = custom/script
exec = cat ~/.config/Google\ Play\ Music\ Desktop\ Player/json_store/playback.json | jq -r '.song.artist, .song.title' | sed ':a;N;$!ba;s/\n/ \- /'
interval = 2
format-foreground = #6B5A68

[colors]
background = #d0303030
background-transparent = #00303030
background-alt = #0f0f0f
background-alt-2 = #ff5fafcf
foreground = #BEB3CD
foreground-alt = #c1c2c3

red = #fb4934
green = #b8bb26
yellow = #fabd2f
blue = #83a598
purple = #d3869b
aqua = #8ec07c
orange = #fe8019
white = #dddddd

blue_arch = #83afe1

grey = #5b51c9
grey1 = #5bb1c9
grey2 = #5bf1c9

primary = green
secondary = blue
alert = red

[bar/base]
width = 100%
height = 24
offset-x = 0
offset-y = 0
fixed-center = true

background = ${colors.background-alt}
foreground = ${colors.foreground}

overline-size = 0
