module-margin-left = 1
module-margin-right = 1

font-0 = Terminess Powerline:style=Regular:size=14:antialias=false;1
; font-0 = Anka/Coder:style=Regular:size=11;1
font-1 = SpaceMono Nerd Font Mono:fontformat=truetype:size=14;3
font-2 = SpaceMono Nerd Font Mono:fontformat=truetype:size=20;5
