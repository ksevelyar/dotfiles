border-size = 0
border-color = #00000000

tray-position = none
tray-padding = 2
tray-background = ${root.background}
padding-left = 1
padding-right = 1


[bar/desktop-bottom]
inherit = bar/base
bottom = true

modules-left = workspaces-xmonad
modules-center = title
modules-right = weather date

[bar/desktop-top]
inherit = bar/base
bottom = false

modules-left = volume gpmdp backlight
modules-center = filesystem
modules-right = eth cpu memory battery

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

format-prefix = "ÔÑú "
format-prefix-foreground = ${colors.foreground}
format-prefix-underline = ${colors.grey}

label-layout = %layout%
label-layout-underline = ${colors.secondary}

label-indicator-padding = 2
label-indicator-margin = 1
label-indicator-background = ${colors.secondary}
label-indicator-underline = ${colors.grey}

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /
mount-1 = /storage

label-mounted = %{F#9c71C7}%mountpoint%%{F-} %free%
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground}

[module/battery]
type = internal/battery
# ls -l /sys/class/power_supply
battery = BAT0
adapter = AC
full-at = 98

format-charging = %{F#9c71C7}ÔñÉ%{F-} <label-charging>
format-discharging = %{F#9c71C7}Ôï∏%{F-} <label-discharging>

[module/mpd]
type = internal/mpd
format-online = <label-song>

icon-prev = ÔÅâ
icon-stop = ÔÅç
icon-play = ÔÅã
icon-pause = ÔÅå
icon-next = ÔÅê

label-song-maxlen = 40
label-song-ellipsis = true

bar-progress-width = 10
bar-progress-indicator = ÔÉó
bar-progress-fill = _
bar-progress-empty = _

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "  %{F#9c71C7}Ôßâ%{F-}"
format-prefix-foreground = ${colors.foreground}
format-underline = ${colors.grey}
label = %percentage:3%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = "%{F#9c71C7}Ôãõ%{F-}"
format-prefix-foreground = ${colors.foreground}
format-underline = ${colors.grey}
label = %percentage_used:3%%

[module/eth]
type = internal/network
interface = enp4s0
interval = 3.0

label-connected = %{F#9c71C7}ÔïÑ%{F-}%downspeed:8%   %{F#9c71C7}Ôïú%{F-}%upspeed:8%

[module/date]
type = internal/date
interval = 5

date = " %A %B %d"
time = %H:%M

format-prefix = "%{F#9c71C7}ÔÑ≥%{F-}"
format-prefix-foreground = ${colors.foreground}
format-underline = ${colors.grey}

label = %{F#6B5A68}%date%%{F-} %time%

[module/volume]
type = internal/pulseaudio
interval = 2

label-volume = "%{F#9c71C7}Ô©Ω %{F-}%percentage%%"
label-volume-foreground = ${root.foreground}

format-muted-prefix = "%{F#9c71C7}Ô™Ä%{F-} "
format-muted-foreground = #6B5A68

[module/backlight]
