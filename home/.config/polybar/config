[global/wm]
margin-top = 0
margin-bottom = 0

[settings]
screenchange-reload = true

[module/title]
type = internal/xwindow
label-maxlen = 500

[module/workspaces-xmonad]
; format-prefix = "%{F#df}ÔÄâ %{F-} "
type = custom/script
exec = tail -F /tmp/.xmonad-workspace-log
exec-if = [ -p /tmp/.xmonad-workspace-log ]
tail = true

[module/weather]
type = custom/script
exec = curl -s "wttr.in/Moscow?format=[%C]+%t" | sed -e 's/\[/%{F#6B5A68}/' | sed -e 's/\]/%{F-}/' | sed -e 's/Clear//'
interval = 300


[module/gpmdp]
type = custom/script
exec = ~/.config/polybar/gpmdp.sh
interval = 2
format-foreground = #6B5A68
click-right = pkill -f google-play-music-desktop-player

[colors]
background = #d0303030
background-transparent = #00303030
background-alt = #0f0f0f
background-alt-2 = #ff5fafcf
foreground = #BEB3CD
foreground-alt = #c1c2c3

red = #fb4934
green = #b8bb26
yellow = #fabd2f
blue = #83a598
purple = #d3869b
aqua = #8ec07c
orange = #fe8019
white = #dddddd

blue_arch = #83afe1

grey = #5b51c9
grey1 = #5bb1c9
grey2 = #5bf1c9

primary = green
secondary = blue
alert = red

[bar/base]
font-0 = Terminess Powerline:style=Regular:size=14:antialias=false;0
font-1 = Siji:size=14:antialias=false;1
width = 100%
height = 24
offset-x = 0
offset-y = 0
fixed-center = true

background = ${colors.background-alt}
foreground = ${colors.foreground}

overline-size = 0
underline-size = 0

border-bottom-size = 0
border-bottom-color = #ffffff

module-margin-left = 1
module-margin-right = 1


radius = 0.0

line-size = 3
line-color = #f00

border-size = 0
border-color = #00000000

tray-position = none
tray-padding = 2
tray-background = ${root.background}
padding-left = 1
padding-right = 1


[bar/desktop-bottom]
inherit = bar/base
bottom = true

modules-left = workspaces-xmonad
modules-center = title
modules-right = weather date

[bar/desktop-top]
inherit = bar/base
bottom = false

modules-left = volume gpmdp
modules-center = filesystem
modules-right = eth cpu memory battery

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

format-prefix = "ÔÑú "
format-prefix-foreground = ${colors.foreground}
format-prefix-underline = ${colors.grey}

label-layout = %layout%
label-layout-underline = ${colors.secondary}

label-indicator-padding = 2
label-indicator-margin = 1
label-indicator-background = ${colors.secondary}
label-indicator-underline = ${colors.grey}

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /
mount-1 = /storage

format-prefix = "ÓÖá "
label-mounted = %{F#9c71C7}%mountpoint%%{F-} %free%
label-unmounted = %mountpoint% ?
label-unmounted-foreground = ${colors.foreground}

[module/battery]
type = internal/battery
# ls -l /sys/class/power_supply
battery = BAT0
adapter = AC
full-at = 98

format-charging = %{F#9c71C7}ÓàÅ%{F-} <label-charging>
format-discharging = %{F#9c71C7}Óáæ%{F-} <label-discharging>

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "  %{F#9c71C7}ÓÄ¶%{F-}"
format-prefix-foreground = ${colors.foreground}
format-underline = ${colors.grey}
label = %percentage:3%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = "%{F#9c71C7}ÓÄ®%{F-}"
format-prefix-foreground = ${colors.foreground}
format-underline = ${colors.grey}
label = %percentage_used:3%%

[module/eth]
type = internal/network
interface = enp4s0
interval = 1.0
; click-left = notify-send

label-connected = %{A1:sh ~/.config/polybar/local_and_public_ips.sh:} %{F#9c71C7}ÓÑº%{F-}%downspeed:8%   %{F#9c71C7}ÓÑª%{F-}%upspeed:8%%{A}

[module/wifi]
type = internal/network
interface = wlp3s0
interval = 1.0
; click-left = notify-send $(ip route | grep default | awk '{print $3}')

label-connected = %essid% %{A1:sh ~/.config/polybar/local_and_public_ips.sh:} %{F#9c71C7}ÓÑº%{F-}%downspeed:8%   %{F#9c71C7}ÓÑª%{F-}%upspeed:8%%{A}
format-connected = <label-connected>
ramp-signal-0 = üò±
ramp-signal-1 = üò†
ramp-signal-2 = üòí
ramp-signal-3 = üòä
ramp-signal-4 = üòÉ
ramp-signal-5 = üòà

[module/date]
type = internal/date
interval = 5

date = " %A %B %d"
time = %H:%M

format-prefix = "%{F#9c71C7}Óâ¶%{F-}"
format-prefix-foreground = ${colors.foreground}
format-underline = ${colors.grey}

label = %{F#6B5A68}%date%%{F-} ÓÄô %time%

[module/volume]
type = internal/pulseaudio
interval = 2

label-volume = "%{F#9c71C7}ÓÅé %{F-}%percentage%%"
label-volume-foreground = ${root.foreground}

format-muted-prefix = "%{F#9c71C7}ÓÅè%{F-} "
format-muted-foreground = #6B5A68

[module/backlight]
type = internal/xbacklight

